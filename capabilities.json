{
    "dataRoles": [
        {
            "displayName": "Localisation",
            "name": "category",
            "kind": "Grouping"
        },
        {
            "displayName": "Valeur",
            "name": "measure",
            "kind": "Measure"
        }
    ],
    "drilldown": {
        "roles": [
            "category"
        ]
    },
    "dataViewMappings": [
        {
            "conditions": [
                {"measure": {"max": 1}, "category":{"max": 1}}
            ],
            "categorical": {
                "categories": {
                    "for": {
                        "in": "category"
                    }
                },
                "values": {
                    "select": [
                        {
                            "bind": {
                                "to": "measure"
                            }
                        }
                    ]
                }
            }
        }
    ],
    "objects": {
        "map": {
            "displayName": "fond de carte",
            "description": "Option du fond de carte",
            "properties": {
                "mapBackground":{
                    "displayName": "choix fond de carte",
                    "type": {
                        "enumeration":[
                            {
                                "value": "regions",
                                "displayName": "regions"
                            },
                            {
                                "value": "departements",
                                "displayName": "departements"
                            },
                            {
                                "value": "arrondissements",
                                "displayName": "arrondissements"
                            }
                        ]
                    }
                }     
            }
        }
    }
}
