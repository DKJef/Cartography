{
    "dataRoles": [
        {
            "displayName": "Localisation",
            "name": "category",
            "kind": "Grouping"
        },
        {
            "displayName": "Valeur",
            "name": "measure",
            "kind": "Measure"
        }
    ],
    "drilldown": {
        "roles": [
            "category"
        ]
    },
    "dataViewMappings": [
        {
            "conditions": [
                {"measure": {"max": 1}, "category":{"max": 1}}
            ],
            "categorical": {
                "categories": {
                    "for": {
                        "in": "category"
                    }
                },
                "values": {
                    "select": [
                        {
                            "bind": {
                                "to": "measure"
                            }
                        }
                    ]
                }
            }
        }
    ]
}
